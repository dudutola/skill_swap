<% content_for :form_title do %>Log in<% end %>
<%= render "devise/shared/auth_layout" do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mb-3">
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control" } %>
    </div>
    <div class="form-inputs mb-3">
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "form-control" } %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" } %>
        <label class="form-check-label" for="remember_me"></label>
      </div>
    <% end %>
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block w-100" %>
  <% end %>
<% end %>


