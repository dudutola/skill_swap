<%= simple_form_for(@issue) do |f| %>
  <div class="form-group">
    <%= f.input :title, required: true, placeholder: "Enter issue title" %>
    <%= f.input :description, required: true, placeholder: "Describe the issue in detail" %>
    <%= f.input :available_on, as: :text, label: "When are you available?", placeholder: "Monday, from 10 AM till 12pm\nTuesday, 3 PM", required: true %>
  </div>

  <div class="field">
    <%= f.label :tag_ids, "Tags" %>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :new_tags, "Add New Tags (comma-separated)" %>
    <%= f.text_field :new_tags, value: "", placeholder: "E.g., Variables, Ruby, Python" %>
  </div>

  <%= f.submit %>
<% end %>
