<div class="navbar navbar-expand-sm navbar-light navbar-lewagon  fixed-top">
  <div class="container-fluid">
    <%= link_to "Skill Swap", root_path, class: "navbar-brand fw-bold" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Add an Issue", new_issue_path, class: "btn btn-primary mx-2" %>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">
              <i class="fas fa-bell"></i> <!-- Notification Icon -->
            </a>
          </li>
          <li>
            <%= link_to "Give feedback", "https://docs.google.com/forms/d/e/1FAIpQLSd9pLfRf3xBrAwGiYO0rmRHtBrGp2ikKsOFx4vXYThdLb4kfw/viewform?usp=header", class: "btn btn-outline-warning", id: "warning" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag current_user.github_avatar_url || "avataaars.png", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", profile_user_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
